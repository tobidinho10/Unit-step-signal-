% Define time vector
t = -5:0.01:5; % Time from -5 to 5 seconds

% Unit Impulse Signal
impulse = zeros(size(t)); % Initialize impulse signal
impulse(t == 0) = 1; % Set value at t=0 to 1
figure;
subplot(3, 2, 1);
stem(t, impulse, 'filled'); % Plot impulse signal
title('Unit Impulse Signal');
xlabel('Time (s)');
ylabel('Amplitude');

% Unit Step Signal
step = t >= 0; % Step function is 1 for t >= 0
subplot(3, 2, 2);
plot(t, step); % Plot step signal
title('Unit Step Signal');
xlabel('Time (s)');
ylabel('Amplitude');

% Unit Ramp Signal
ramp = t .* (t >= 0); % Ramp function is t for t >= 0
subplot(3, 2, 3);
plot(t, ramp); % Plot ramp signal
title('Unit Ramp Signal');
xlabel('Time (s)');
ylabel('Amplitude');

% Exponential Signal
exponential = exp(t); % Exponential function e^t
subplot(3, 2, 4);
plot(t, exponential); % Plot exponential signal
title('Exponential Signal');
xlabel('Time (s)');
ylabel('Amplitude');

% Signum Signal
signum = sign(t); % Signum function
subplot(3, 2, 5);
plot(t, signum); % Plot signum signal
title('Signum Signal');
xlabel('Time (s)');
ylabel('Amplitude');

% Sinc Signal
sinc_signal = sinc(t); % Sinc function (normalized)
subplot(3, 2, 6);
plot(t, sinc_signal); % Plot sinc signal
title('Sinc Signal');
xlabel('Time (s)');
ylabel('Amplitude');

% Adjust layout
sgtitle('Continuous-Time Signals'); % Overall title for the figure
